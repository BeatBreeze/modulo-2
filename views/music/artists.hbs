<div class="mb-5 mx-5">
  <div>
    <a href="{{httpHeader}}" class="btn btn-outline-light btn-lg border border-0">
      <span class="fa fa-angle-left"></span>
      Back
    </a>
  </div>
  <div class="d-flex justify-content-center">
    {{#if Info.Artists.images}}
      {{#if Info.Artists.images.0.url}}
        <img
          src="{{Info.Artists.images.0.url}}"
          class="card-img-top object-fit-contain imgArtist shadow-lg"
          alt="{{Info.Artists.name}}"
        />
      {{else}}
        <img
          src="../img/no-cover.png"
          class="card-img-top object-fit-contain imgArtist shadow-lg"
          alt="{{Info.Artists.name}}"
        />
      {{/if}}
    {{else}}
      <img
        src="../img/no-cover.png"
        class="card-img-top object-fit-contain imgArtist shadow-lg"
        alt="{{Info.Artists.name}}"
      />
    {{/if}}
  </div>
  
  <div class="text-center text-light">
    <h1>{{Info.Artists.name}}</h1>
    <ul class="d-flex justify-content-center align-items-center p-0">
      {{#each Info.Artists.genres as |genre|}}
      {{!-- <a class="btn btn-outline-light btn-lg border border-0 p-2 text-capitalize text-decoration-underline" href="/genres/{{genreUrl genre}}">         --}}
        <p class="text-light p-2 text-capitalize">{{genre}}</p>
      {{!-- </a> --}}
      {{/each}}
    </ul>
  </div>
  <h1 class="text-light">ALBUMS</h1>
  <div class='row row-cols-2 row-cols-lg-6 g-2 g-lg-3'>
    {{#each Info.Albums as |album|}}
      <button class='col card border border-0 bg-transparent text-light d-flex align-items-center pt-2' onclick='window.location.href="../albums/{{album.id}}"'>
        {{> artistAlbums info=album}}
      </button>
    {{/each}}
  </div>
</div>