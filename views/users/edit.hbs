          </div>

          {{!--EMAIl--}}  
          <div class="input-group mb-1">
             <span class="input-group-text"><i class = "fa fa-fw fa-envelope-o"></i></span> 
             <input type="text" name="email" class="form-control{{#if errors.email}} is-invalid{{/if}}" placeholder="email" aria-label="Name" value = "{{user.email}}"/> 
             {{#if errors.email}}<div class = "invalid-feedback">{{ errors.email }}</div>{{/if}} 
          </div>
          {{!--PASSWORD--}}  
        <div class="input-group mb-1">
            <span class="input-group-text"><i class="fa fa-fw fa-lock"></i></span>
            <input type="password" name="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" placeholder="password" aria-label="Name">
