{{! ALBUM }}
{{#if isAlbum}}
  {{#if info.images}}
    {{#if info.images.0.url}}
      <a href="albums/{{info.id}}">
        <img
          src="{{info.images.0.url}}"
          class="card-img-top object-fit-contain imgList"
          alt="{{info.name}}"
        />
      </a>
    {{else}}
      <a href="albums/{{info.id}}">
        <img
          src="img/no-cover.png"
          class="card-img-top object-fit-contain imgList rounded"
          alt="{{info.name}}"
        />
      </a>
    {{/if}}
  {{else}}
    <a href="albums/{{info.id}}">
      <img
        src="img/no-cover.png"
        class="card-img-top object-fit-contain imgList rounded"
        alt="{{info.name}}"
      />
    </a>
  {{/if}}
  {{! ARTIST }}
{{else}}
  {{#if info.images}}
    {{#if info.images.0.url}}
      <a href="artist/{{info.id}}">
        <img
          src="{{info.images.0.url}}"
          class="card-img-top object-fit-contain imgList"
          alt="{{info.name}}"
        />
      </a>
    {{else}}
      <a href="artist/{{info.id}}">
        <img
          src="img/no-cover.png"
          class="card-img-top object-fit-contain imgList rounded"
          alt="{{info.name}}"
        />
      </a>
    {{/if}}
  {{else}}
    <a href="artist/{{info.id}}">
      <img
        src="img/no-cover.png"
        class="card-img-top object-fit-contain imgList rounded"
        alt="{{info.name}}"
      />
    </a>
  {{/if}}
{{/if}}