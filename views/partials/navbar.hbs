<nav class="navbar">
  <div class="container d-flex justify-space-between">
    {{! - LEFT }}
    {{! - NAVEGATION MENU }}
    <div class="d-flex">
      <button
        class="btn btn-light border border-0"
        style="color: white; background-color: transparent;"
        type="button"
        data-bs-toggle="offcanvas"
        data-bs-target="#offcanvasScrolling"
        aria-controls="offcanvasScrolling"
      ><i class="fa fa-bars" aria-hidden="true"></i></button>
      <div
        class="offcanvas offcanvas-start barVertical"
        data-bs-scroll="true"
        data-bs-backdrop="false"
        tabindex="-1"
        id="offcanvasScrolling"
        aria-labelledby="offcanvasScrollingLabel"
      >
        <div class="offcanvas-header">
          <button
            type="button"
            class="btn-close closeVertical"
            data-bs-dismiss="offcanvas"
            aria-label="Close"
          ></button>
        </div>
        <div class="offcanvas-body">
          <ul class="nav flex-column navVertical">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">HOME</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">GENRES</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">PLAYLISTS</a>
            </li>
          </ul>
        </div>
      </div>
      {{! LOGO }}
      <a class="navbar-brand" href="/">
        <img
          src="https://media.istockphoto.com/id/1286099898/es/vector/color-geom%C3%A9trico-ecualizador-circular-de-ne%C3%B3n-ondas-de-sonido-de-audio-redondo-eq.jpg?s=2048x2048&w=is&k=20&c=Q2R16IuQu8GJ1-DWv4_fpA9WhLihOH3jS7Dtwyj404I="
          alt="Logo"
          width="30"
          height="24"
          class="d-inline-block align-text-top"
        />
        <strong class="text-light">BEATBREEZE</strong>
      </a>
    </div>
    {{! - SEARCH }}
    <form class="d-flex" method="GET" action="/search">
      <input
        class="form-control me-2"
        type="text"
        id="search"
        name="search"
        placeholder="Artits, Albums or Tracks"
        aria-label="Search"
      />
      <button class="btn btn-light" type="submit">Search</button>
    </form>
    {{! - RIGHT }}
    <ul class="nav justify-content-center nav-item me-md-2">
      {{#if currentUser}}
        <div class="d-flex align-items-center">
          <a href="/profile">
            <img
              src="{{currentUser.avatarURL}}"
              class="rounded-circle imgTop"
              id="rounded-circle-navbar"
              href="/profile"
              alt="User profile"
            />
          </a>
        </div>
        <form method="POST" action="/logout" class="m-0">
          <button type="submit" class="btn btn-danger mx-2">Log out</button>
        </form>
      {{else}}
        <div class="d-flex nav-item me-md-2">
          <a class="btn btn-light" aria-current="page" href="/login"><strong
              style="color: purple"
            >Login</strong></a>
        </div>
        <div class="nav-item me-md-2">
          <a class="btn btn-light" href="/register"><strong
              style="color: purple"
            >Register</strong></a>
        </div>
      {{/if}}
      <div class="nav-item me-md-2">
        <a class="btn btn-light" href="/explore"><strong
            style="color: purple"
          >Explore</strong></a>
      </div>
    </ul>
  </div>
</nav>